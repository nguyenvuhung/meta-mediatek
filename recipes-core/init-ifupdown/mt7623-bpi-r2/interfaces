# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

# The loopback interface
auto lo
iface lo inet loopback

# MT7623's LAN interfaces are attached to eth0 via DSA using the MT7530
# switch - bring up eth0 with no IP address:
auto eth0
iface eth0 inet manual
    pre-up ifconfig $IFACE up
    post-down ifconfig $IFACE down

# eth1 typically is the WAN uplink interface
iface eth1 inet dhcp

# DSA-attached LAN interfaces: you may want to change these...
auto lan0
iface lan0 inet dhcp

#auto lan1                                                                                                                                                                                                                              
#iface lan1 inet static                                                                                                                                                                                                                 
#    address 192.168.1.1                                                                                                                                                                                                                
#    netmask 255.255.255.0                                                                                                                                                                                                              
#    network 192.168.1.0                                                                                                                                                                                                                
                                                                                                                                                                                                                                        
#auto lan2                                                                                                                                                                                                                              
#iface lan2 inet static                                                                                                                                                                                                                 
#    address 192.168.2.1                                                                                                                                                                                                                
#    netmask 255.255.255.0                                                                                                                                                                                                              
#    network 192.168.2.0                                                                                                                                                                                                                
                                                                                                                                                                                                                                        
auto lan3                                                                                                                                                                                                                               
iface lan3 inet static                                                                                                                                                                                                                  
    address 192.168.3.1                                                                                                                                                                                                                 
    netmask 255.255.255.0                                                                                                                                                                                                               
    network 192.168.3.0                                                                                                                                                                                                                 
                                                                                                                                                                                                                                        
auto lan1                                                                                                                                                                                                                               
iface lan1 inet manual                                                                                                                                                                                                                  
auto lan2                                                                                                                                                                                                                               
iface lan2 inet manual                                                                                                                                                                                                                  
#auto lan3                                                                                                                                                                                                                              
#iface lan3 inet manual                                                                                                                                                                                                                 
                                                                                                                                                                                                                                        
# Bridge setup                                                                                                                                                                                                                          
auto br0                                                                                                                                                                                                                                
iface br0 inet static                                                                                                                                                                                                                   
    bridge_ports lan1 lan2                                                                                                                                                                                                              
    address 192.168.1.1                                                                                                                                                                                                                 
    netmask 255.255.255.0                                                                                                                                                                                                               
    gateway 192.168.1.0                                                                                                                                                                                                                 
    bridge_fd 5                                                                                                                                                                                                                         
    bridge_stp no

# Configure Wifi
auto wlan0
iface wlan0 inet dhcp

nameserver 8.8.8.8
